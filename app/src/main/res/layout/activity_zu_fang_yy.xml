<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bj_theme"
    android:orientation="vertical">

    <include layout="@layout/my_toolbar" />

    <include layout="@layout/item_include_fyxx" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:paddingHorizontal="15dp"
        android:paddingVertical="@dimen/dp_10">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/tv_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入姓名"
            android:gravity="end"
            android:textColor="@color/color_333333"
            android:textCursorDrawable="@drawable/common_edit_input_line"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="15dp"
        android:paddingVertical="@dimen/dp_10">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end"
            android:hint="请选择性别"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="15dp"
        android:paddingVertical="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/tv_userNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end"
            android:hint="请输入联系方式"
            android:textColor="@color/color_333333"
            android:textCursorDrawable="@drawable/common_edit_input_line"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:paddingHorizontal="15dp"
        android:paddingVertical="@dimen/dp_10">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="看房时间"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/ic_jiantou_you"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="end"
            android:hint="请选择时间"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:paddingHorizontal="15dp"
        android:paddingVertical="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/tv_remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end"
            android:hint="填写备注"
            android:textColor="@color/color_333333"
            android:textCursorDrawable="@drawable/common_edit_input_line"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:paddingHorizontal="15dp"
        android:paddingVertical="@dimen/dp_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="是否指定带看顾问"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/common_selected_set_open" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dkgw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="15dp"
        android:paddingVertical="@dimen/dp_10"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:text="选择带看顾问"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_kfr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/ic_jiantou_you"
            android:gravity="end"
            android:drawablePadding="@dimen/dp_10"
            android:hint="请选择带看顾问"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>


    <TextView
        android:id="@+id/bnt_kf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bnt_details_height"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/circle_solid_theme_25"
        android:gravity="center"
        android:text="预约看房"
        android:textColor="@color/white"
        android:textSize="@dimen/bnt_details_text_size" />


</LinearLayout>