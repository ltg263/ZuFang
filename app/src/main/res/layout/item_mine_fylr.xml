<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_htbh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="预约时间："
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_qyzt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="状态"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:id="@+id/include_yyxx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_qyzt"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:visibility="gone"
            android:src="@drawable/common_selected_circle" />

        <include layout="@layout/item_include_fyxx" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@id/include_yyxx"
        android:background="@color/color_eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_yyxx"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/bnt_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/bnt_list_height"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/circle_line_666_20"
            android:gravity="center"
            android:text="统计"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/bnt_list_text_size" />

        <TextView
            android:id="@+id/bnt_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/bnt_list_height"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle_line_666_20"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/bnt_list_text_size" />

        <TextView
            android:id="@+id/bnt_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/bnt_list_height"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle_solid_theme_25"
            android:gravity="center"
            android:text="上架"
            android:textColor="@color/white"
            android:textSize="@dimen/bnt_list_text_size" />


    </LinearLayout>


</RelativeLayout>